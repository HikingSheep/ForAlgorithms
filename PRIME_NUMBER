PRIME_NUMBER(a,InputNumber):
        if InputNumber <= 1:
            output( Try other numbers)
        else:
            if a >= InputNumber:
                output( InputNumber is a prime number)
            else:
                if InputNumber <- 2:
                    output( InputNumber is a prime number)
                else if (InputNumber % a) <- 0:
                    output( InputNumber is not a prime number)
                else:
                    output( PRIME_NUMBER(a+1,InputNumber))
        output( InputNumber is not a prime number)
